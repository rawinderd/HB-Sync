<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="Theme.HBSYNC" parent="Base.Theme.HBSYNC" />

    <style name="Base.Theme.HBSYNC" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">#3F51B5</item>
        <item name="colorOnPrimary">@color/Coral</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/skyblue</item>
        <item name="colorSecondaryVariant">@color/Teal</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lightblue</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarStyle" parent="Base.Theme.HBSYNC">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="BlackBoldText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="BlackBoldHeading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TextSize16">
        <item name="android:textSize">16dp</item>
    </style>
    <style name="buttonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:color">@color/Army_Brown</item>
        <item name="android:textColor">@color/sikhreadersecondryColor</item>
    </style>
    <style name="OutlinedButtonWithIcon" parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/colorPrimary</item>

    </style>
    <style name="OutlinedButtonWithoutIcon" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextButtonWithoutIcon" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextButtonWithIcon" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/colorPrimary</item>
    </style>


</resources>